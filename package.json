{
  "name": "huddle-landing-page-with-alternating-feature-blocks-master",
  "version": "1.0.0",
  "description": "![Design preview for the Huddle landing page with alternating feature blocks coding challenge](./design/desktop-preview.jpg)",
  "main": "script.js",
  "scripts": {
    "copy:html": "copyfiles -u 1 ./src/*.html docs",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* docs",
    "copy:js": "copyfiles -u 1 ./src/*.js docs",
    "copy": "npm-run-all --parallel copy:*",
    "watch:assets": "onchange \"./src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:js": "onchange \"src/*.js\" -- npm run copy:js",
    "watch:tailwind": "npx tailwindcss -i \"./src/input.css\" -o \"./docs/output.css\" --watch",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server \"docs\" --files \"docs\" ",
    "start": "npm-run-all copy --parallel watch serve"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "tailwindcss": "^3.3.6"
  }
}
